<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/inner_component_margin"
    android:layout_marginRight="@dimen/inner_component_margin">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/startup_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_startup_logo"></com.android.volley.toolbox.NetworkImageView>

    <TextView
        android:id="@+id/startup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startup_logo"
        android:layout_centerHorizontal="true"
        android:text="瑞奇科技"
        android:textColor="@color/dark_grey_label"
        android:textSize="@dimen/text_size_tiny" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startup_name"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startup_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/grey_label"
            android:textSize="@dimen/text_size_micro" />

        <TextView
            android:id="@+id/domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="@color/grey_label"
            android:textSize="@dimen/text_size_micro" />

        <TextView
            android:id="@+id/investment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="@color/grey_label"
            android:textSize="@dimen/text_size_micro" />
    </LinearLayout>

</RelativeLayout>